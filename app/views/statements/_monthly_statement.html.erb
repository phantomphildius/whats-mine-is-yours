<%= turbo_frame_tag "monthly_statement_#{monthly_statement.to_param}" do %>
  <div class="row border-bottom border-secondary-subtle py-2">
    <div class="row">
      <div class="col-5">
        <%= monthly_statement.time_period.strftime('%m/%Y') %>
      </div>
      <div class="col-5 <%= monthly_statement.met_budget? ? 'text-success' : 'text-danger' %>">
        <%= humanized_money_with_symbol(monthly_statement.total) %>
      </div>
      <div class="col-2">
        <%= link_to "View", monthly_statement_path(id: monthly_statement.to_param), class: 'float-right' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= monthly_statement.number_of_statements %>
        <span>
          <%= monthly_statement.institution_names %>
        </span>
      </div>
    </div>
  </div>
<% end %>
