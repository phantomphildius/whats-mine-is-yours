<%= turbo_frame_tag "monthly_statement_#{monthly_statement.to_param}" do %>
  <div class="card shadow-sm ps-3 py-3">
    <div class="row">
      <div class="col-5">
        <h6 class="text-muted">Time period</h6>
        <p><%= monthly_statement.time_period.strftime('%m/%Y') %></p>
      </div>
      <div class="col-5">
        <h6 class="text-muted">Total</h6>
        <div class="badge bg-<%= monthly_statement.met_budget? ? 'success' : 'danger' %>">
          <%= humanized_money_with_symbol(monthly_statement.total) %>
        </div>
      </div>
      <div class="col-2">
        <%= link_to "View", monthly_statement_path(id: monthly_statement.to_param), class: 'float-right' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= render collection: monthly_statement.institution_names, partial: 'institution' %>
      </div>
    </div>
  </div>
<% end %>
