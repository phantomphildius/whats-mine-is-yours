<%= turbo_frame_tag item do %>
  <div class="card shadow-sm my-3 ps-3 py-3">
    <div class="row">
        <div class="col-5">
          <h6 class="text-muted">Category</h6>
          <p class="lead col-5"><%= item.category.capitalize %></p>
        </div>
        <div class="col-5">
          <h6 class="text-muted">Amount</h6>
          <p class="lead col-5"><%= humanized_money_with_symbol(item.amount) %></p>
        </div>
        <div class="col-2 row">
          <div class="col-6">
            <%= link_to "edit", edit_budget_item_path(item.budget, item) %>
          </div>
          <div class="col-6">
            <%= button_to 'x', budget_item_path(item.budget, item), method: :delete, class: 'btn btn-outline-danger btn-sm' %>
          </div>
      </div>
    </div>
    <div class="row">
      <h6 class="text-muted">Tags</h6>
        <div id="budget_item_<%= item.id %>_tags">
          <%= render item.tags %>
        </div>
        <div class="col-4">
          <%= render "budget_items/new_tag_link", item: item %>
        </div>
      </div>
    </div>
  </div>
<% end %>
